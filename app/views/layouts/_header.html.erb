<% if @show_trial_alert %>
  <% if is_on_trial? %>
    <div class="alert alert-info">There are <%= (((current_user.created_at + 14.days) - Time.now)/60/60/24).round %> days remaining in your free trial.</div>
  <% end %>
<% end %>
<% if @show_subscription_alert %>
  <% if current_user.created_at < 14.days.ago && !is_subscribed? %>
    <div class="alert alert-danger">Oh snap! Your 14 day trial has expired. <%= link_to "Subscribe here", new_subscription_path, 'data-no-turbolink' => true %> to keep on journaling (and buy us a coffee).</div>
  <% end %>
<% end %>

<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<div class="header clearfix">
  <nav>
      <ul class="pull-right">
          <% if current_user %>
            <li role="presentation"><%= link_to "Edit Account", edit_user_path(current_user), id: "edit-account" %></li>
            <li role="presentation"><%= link_to "Logout", logout_path, id: "logout" %></li>
          <% else %>
            <li><%= link_to "Login", login_path %></li>
            <li><%= link_to "Sign up", signup_path %></li>
          <% end %>
          
      </ul>
  </nav>
</div>
<div class="container">
  <div class="row logo">
      <div class="logo col-xs-12 text-center">
          <%= link_to image_tag("logo-betterdays.png", size: "177x85"), entries_path %>
      </div>
  </div> <!-- end logo -->
