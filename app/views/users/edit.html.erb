<div class="row">
  <div class="settings col-xs-12 text-center">

    <%= form_for @user do |f| %>
        <%= render 'shared/error_messages' %>
        <div class="form-group">
          <div class = "form-label">
            <%= f.label :first_name %>
          </div>
          <div class = "form-input">
            <%= f.text_field :first_name, class: 'form-control text' %>
          </div>
        </div>
        <div class= "form-group">
          <div class ="form-label">
            <%= f.label :email %>
          </div>
          <div class = "form-input">
            <%= f.email_field :email, class: 'form-control text' %>
          </div>
        </div>
        <div class="form-group">
          <div class = "form-label">
            <%= f.label :password %>
          </div>
          <div class = "form-input">
            <%= f.password_field :password, class: 'form-control text' %>
          </div>
        </div>
        <div class="form-group">
          <div class = "form-label">
            <%= f.label :password_confirmation %>
          </div>
          <div class = "form-input">
            <%= f.password_field :password_confirmation, class: 'form-control text' %>
          </div>
        </div>
        <div class="checkbox">
        <%= f.label :reminder, class: 'checkbox inline' do %>
          <%= f.check_box :reminder %>
          <span>Receive a daily reminder to write your journal</span>
        <% end %>
        <% if is_subscribed? %>
        <span>Cancel subscription (We'll charge you $3.00 on <%= @next_billing %>)</span>
        <% end %>
        </div>
        <%= f.submit "Update Account", class: 'btn btn-primary' %>
        
    <% end %>

  </div>
</div>

<%= render 'layouts/footer' %>