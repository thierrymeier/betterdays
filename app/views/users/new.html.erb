<script type="text/javascript">
  mixpanel.track("View signup page");
  mixpanel.track_forms("#new_user", "Signed up");
</script>

<div class="row">
  <div class="signup col-xs-12 text-center">
    <h1>Sign Up</h1>
    
    <%= form_for @user do |f| %>
    
        <%= render 'shared/error_messages' %>
        <div class="form-group">
          <div class ="form-label">
            <%= f.label :first_name, 'Your First Name' %>
          </div>
          <div class = "form-input">
            <%= f.text_field :first_name, class: 'form-control text' %>
          </div>
        </div>
        <div class="form-group">
          <div class ="form-label">
            <%= f.label :email %>
          </div>
          <div class = "form-input">
            <%= f.text_field :email, class: 'form-control text' %>
          </div>
        </div>
        <div class="form-group">
          <div class ="form-label">
            <%= f.label :password %>
          </div>
          <div class = "form-input">
            <%= f.password_field :password, class: 'form-control text' %>
          </div>
        </div>
        <%= f.submit "Sign Up", class: 'btn btn-primary' %>
        
    <% end %>

  </div>
</div>

<%= render 'layouts/footer' %>