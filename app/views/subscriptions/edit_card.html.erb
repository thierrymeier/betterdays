<div class="row">
  <div class="subscribe col-xs-12 text-center">
    
<h1>Change CreditCard</h1>
<p>Your current card on file is:</p>
<div><%= current_user.card_brand %> **** **** **** <%= current_user.card_last4 %></div>

<%= form_tag card_path, method: :put, id: "payment-form" do %>
  <span class="payment-errors"></span>
  <div class="form-group">
    <div class="form-label">
      <label>Card Number</label>
    </div>
    <div class="form-input">  
      <input class="form-control" value="4242 4242 4242 4242" type="text" size="20" data-stripe="number"/>
    </div>
  </div>

  <div class="form-group">
    <div class="form-label">
      <label>CVC</label> 
    </div>
    <div class="form-input">
      <input class="form-control" value="123" type="text" size="4" data-stripe="cvc"/>
    </div>
  </div>

  <div class="form-group">
    <div class="form-label">
      <label>Expiration Month (MM)</label>
    </div>
    <div class="form-input">
      <input class="form-control" value="05" type="text" size="2" data-stripe="exp-month"/>
    </div>
  </div>
  
  <div class="form-group">
    <div class="form-label">
      <label>Expiration Year (YYYY)</label>
    </div>
    <div class="form-input">
      <input class="form-control" value="2019" type="text" size="4" data-stripe="exp-year"/>
    </div>
  </div>

  <button class="btn btn-primary" type="submit">Update Card</button>
<% end %>

  </div>
</div>

<%= render 'layouts/footer' %>